{
  "$schema": "./schemas/file-filters.schema.json",
  "description": "File filtering configuration for the SynthDev snapshot system",
  "version": "1.0.0",
  "defaultExclusions": [
    "node_modules/**",
    ".git/**",
    ".svn/**",
    ".hg/**",
    ".DS_Store",
    "Thumbs.db",
    "*.tmp",
    "*.temp",
    "*.log",
    "*.cache",
    ".env",
    ".env.local",
    ".env.*.local",
    "dist/**",
    "build/**",
    "coverage/**",
    ".nyc_output/**",
    "*.min.js",
    "*.min.css",
    ".vscode/settings.json",
    ".idea/**",
    "*.swp",
    "*.swo",
    "*~"
  ],
  "defaultInclusions": [
    "src/**",
    "lib/**",
    "test/**",
    "tests/**",
    "spec/**",
    "docs/**",
    "config/**",
    "scripts/**",
    "*.md",
    "*.txt",
    "*.json",
    "*.js",
    "*.ts",
    "*.jsx",
    "*.tsx",
    "*.css",
    "*.scss",
    "*.sass",
    "*.less",
    "*.html",
    "*.xml",
    "*.yaml",
    "*.yml",
    "*.toml",
    "*.ini",
    "*.cfg",
    "*.conf",
    "package.json",
    "package-lock.json",
    "yarn.lock",
    "pnpm-lock.yaml",
    "tsconfig.json",
    "jsconfig.json",
    ".gitignore",
    ".gitattributes",
    "README*",
    "LICENSE*",
    "CHANGELOG*",
    "CONTRIBUTING*"
  ],
  "binaryExtensions": [
    ".exe",
    ".dll",
    ".so",
    ".dylib",
    ".bin",
    ".dat",
    ".jpg",
    ".jpeg",
    ".png",
    ".gif",
    ".bmp",
    ".ico",
    ".svg",
    ".webp",
    ".mp3",
    ".mp4",
    ".avi",
    ".mov",
    ".wav",
    ".flac",
    ".ogg",
    ".pdf",
    ".doc",
    ".docx",
    ".xls",
    ".xlsx",
    ".ppt",
    ".pptx",
    ".zip",
    ".rar",
    ".7z",
    ".tar",
    ".gz",
    ".bz2",
    ".xz",
    ".class",
    ".jar",
    ".war",
    ".ear",
    ".deb",
    ".rpm",
    ".dmg",
    ".iso",
    ".img"
  ],
  "sizeThresholds": {
    "maxFileSize": 10485760,
    "warnFileSize": 1048576,
    "maxTotalSize": 104857600
  },
  "patterns": {
    "caseSensitive": false,
    "followSymlinks": false,
    "includeHidden": false,
    "respectGitignore": true
  },
  "customRules": {
    "projectSpecific": {
      "enabled": true,
      "configFile": ".synthdev-filters"
    },
    "userGlobal": {
      "enabled": true,
      "configFile": "~/.synthdev/filters.json"
    }
  }
}
