{
  "storage": {
    "type": "memory",
    "maxSnapshots": 50,
    "maxMemoryMB": 100,
    "persistToDisk": false
  },
  "fileFiltering": {
    "defaultExclusions": [
      "node_modules/**",
      ".venv/**",
      "venv/**",
      "vendor/**",
      "packages/**",
      "bower_components/**",
      "dist/**",
      "build/**",
      "target/**",
      "bin/**",
      "obj/**",
      "out/**",
      ".next/**",
      ".nuxt/**",
      ".git/**",
      ".svn/**",
      ".hg/**",
      ".bzr/**",
      ".vscode/**",
      ".idea/**",
      "*.swp",
      "*.swo",
      "*~",
      ".DS_Store",
      "Thumbs.db",
      "*.tmp",
      "*.temp",
      "*.log",
      "*.cache",
      "*.pid",
      "*.seed",
      "*.pid.lock",
      ".env",
      ".env.*",
      "coverage/**",
      ".nyc_output/**",
      "docs/_build/**",
      "site/**"
    ],
    "customExclusions": [],
    "maxFileSize": 10485760,
    "binaryFileHandling": "exclude",
    "followSymlinks": false,
    "caseSensitive": false
  },
  "backup": {
    "createBackups": true,
    "backupSuffix": ".backup",
    "preservePermissions": true,
    "validateChecksums": true,
    "maxConcurrentFiles": 10,
    "encoding": "utf8"
  },
  "behavior": {
    "autoCleanup": true,
    "cleanupThreshold": 40,
    "confirmRestore": true,
    "showPreview": true
  }
}